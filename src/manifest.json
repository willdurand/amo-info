{
  "manifest_version": 2,
  "name": "amo-info",
  "description": "An extension to show information about AMO related services.",
  "version": "1.23.0",
  "applications": {
    "gecko": {
      "id": "{db55bb9b-0d9f-407f-9b65-da9dd29c8d32}",
      "strict_min_version": "59.0"
    }
  },
  "icons": {
    "64": "icons/icon.png"
  },
  "page_action": {
    "default_title": "amo-info",
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "popup/popup.html",
    "show_matches": [
      "http://olympia.test/*",
      "http://localhost/*",
      "https://example.com/*",
      "https://*.addons-dev.allizom.org/*",
      "https://*.addons.allizom.org/*",
      "https://*.addons.mozilla.org/*",
      "https://addons-dev.allizom.org/*",
      "https://addons.allizom.org/*",
      "https://addons.mozilla.org/*",
      "https://extensionworkshop-dev.allizom.org/*",
      "https://extensionworkshop.allizom.org/*",
      "https://extensionworkshop.com/*"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://olympia.test/*",
    "http://localhost:3000/*",
    "https://example.com:3000/*",
    "https://*.addons-dev.allizom.org/*",
    "https://*.addons.allizom.org/*",
    "https://*.addons.mozilla.org/*",
    "https://addons-dev.allizom.org/*",
    "https://addons.allizom.org/*",
    "https://addons.mozilla.org/*",
    "https://extensionworkshop-dev.allizom.org/*",
    "https://extensionworkshop.allizom.org/*",
    "https://extensionworkshop.com/*"
  ]
}
